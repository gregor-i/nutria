# API
GET           /api/fractals                  controller.FractalController.listFractals()
GET           /api/fractals/:id              controller.FractalController.getFractal(id: String)
DELETE        /api/fractals/:id              controller.FractalController.deleteFractal(id: String)
POST          /api/fractals                  controller.FractalController.postFractal()
GET           /api/fractals/:id/image        controller.FractalController.image(id: String)

# Admin
GET           /admin                         controller.AdminController.ui()
POST          /admin/truncate-images         controller.AdminController.truncateImages()
POST          /admin/clean-fractals          controller.AdminController.cleanFractals()
POST          /admin/insert-system-fractals  controller.AdminController.insertSystemFractals()
POST          /admin/delete-fractal/:id      controller.AdminController.deleteFractal(id : String)

# Frontend
GET           /                              controller.UiController.index
GET           /viewer                        controller.UiController.index

# Assets
GET           /favicon.ico                   controller.UiController.asset(path = "icon.png", folder = "/public/img")
GET           /img/*path                     controller.UiController.asset(path: String, folder = "/public/img")
GET           /js/*path                      controller.UiController.asset(path: String, folder = "/public/js")
GET           /css/*path                     controller.UiController.asset(path: String, folder = "/public/css")
